<script type="text/javascript">
	$(function(){
		$("#testForm").submit(function(event) {
			if (!validaNome($('#nome').val())){
				return false;
			}

			if (!validaEmail($('#email').val())){
				return false;
			}
			return true;
		});
	})
</script>
<div class="container">
  <div class="title-container">
    <h2>Editar</h2>
  </div>
  <div class="form-new">
    <%= form_for @contatos , :html => { :id => "testForm" } do |c| %>
      <div class="form-group">
        <%= c.label :nome %>
        <%= c.text_field :nome, class: "form-control", id:"nome" %>
      </div>
      <div class="form-group">
        <%= c.label :email %>
        <%= c.text_field :email, class: "form-control", type: "email", id:"email" %>
      </div>
      <div class="actions">
        <%= c.submit "Salvar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
